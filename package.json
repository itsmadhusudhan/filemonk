{
  "name": "filemonk",
  "version": "1.1.0",
  "description": "Javascript library to upload files to server",
  "main": "lib/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "dist/filemonk.js",
  "module": "es/index.js",
  "author": "Madhusudhan",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build:commonjs": "tsc",
    "build:es": "tsc -m es6 --outDir es",
    "build:umd": "cross-env NODE_ENV=development --mode=production  webpack",
    "build:umd:min": "cross-env NODE_ENV=production --mode=production webpack",
    "build": "yarn build:es && yarn build:commonjs  && yarn build:umd && yarn build:umd:min",
    "clean": "rimraf lib dist es",
    "build:clean": "yarn run clean && yarn build",
    "pretest": "yarn lint",
    "lint": "eslint src --ext ts,tsx,js",
    "api-types": "api-extractor run --local",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@types/uuid": "^8.3.4",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@webpack-cli/generators": "^2.5.0",
    "clean-webpack-plugin": "^4.0.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
