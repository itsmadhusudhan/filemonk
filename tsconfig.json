{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "lib": ["ES2015", "dom"],
    "outDir": "lib",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "test/**/*", "*.test.ts", "lib"],

  "compileOnSave": false,
  "buildOnSave": false
}
